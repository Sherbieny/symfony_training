        {% block body %}
            <div class="footer">
                <p class="footer-text">Made with <span class="fa-code"><3</span> <a href="https://csharkstudios.com">CSHARK Studios</a></p>
            </div>
        {% endblock %}

        {% block javascripts %}
            <script src="//code.jquery.com/jquery-2.1.4.min.js"></script>
            <script src="{{ asset('js/main.js') }}"></script>
        {% endblock %}
    </body>
</html>
