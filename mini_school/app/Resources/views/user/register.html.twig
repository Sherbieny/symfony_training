{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h1>Register!</h1>

                {{ form_start(form) }}
                {{ form_row(form.email) }}
                {{ form_row(form.plainPassword.first, {
                    'label': 'Password'
                }) }}
                {{ form_row(form.plainPassword.second, {
                    'label': 'Repeat Password'
                }) }}

                <button class="btn btn-primary" type="submit" formnovalidate>
                    Register <span class="fa fa-user"></span>
                </button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}